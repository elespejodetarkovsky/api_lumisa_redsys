{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">

            <H1>3DSMethod Init</H1>
            <form id="formTreeDs" action="{{ threeDSMethodURL }}" method="POST" enctype="application/x-www-form-urlencoded">
                <input type="hidden" name="threeDSMethodData" value="{{ threeDSMethodData }}">
                <input type="submit">
            </form>

    </div>
    <script>

        window.addEventListener('load', function (){
            //enviará el formulario al cargarse la página a la entidad bancaria
            let formulario = document.getElementById('formTreeDs');

            formulario.submit();
        });

    </script>
{% endblock %}